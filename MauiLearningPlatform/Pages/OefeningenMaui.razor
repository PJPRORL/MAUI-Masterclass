@page "/oefeningen-maui"
@using MauiLearningPlatform.Components.Exercises

<div class="page">
    <div class="sidebar" style="width: 300px; border-right: 1px solid var(--border-color); background-color: var(--sidebar-bg);">
        <div class="sidebar-header">
            <h3>Oefeningen</h3>
        </div>
        <div class="nav-menu">
            <div class="nav-item">
