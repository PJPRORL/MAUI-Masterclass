                    <span class="icon">ğŸ“</span> 08. Dapper Select
                </div>
            </div>
            <div class="nav-item">
                <div class="nav-link @(CurrentExercise == 9 ? "active" : "")" @onclick="() => SelectExercise(9)" style="cursor: pointer;">
                    <span class="icon">ğŸ“</span> 09. Dapper Joins 1
                </div>
            </div>
            <div class="nav-item">
                <div class="nav-link @(CurrentExercise == 10 ? "active" : "")" @onclick="() => SelectExercise(10)" style="cursor: pointer;">
                    <span class="icon">ğŸ“</span> 10. Dapper Joins 2
                </div>
            </div>
            <div class="nav-item">
                <div class="nav-link @(CurrentExercise == 11 ? "active" : "")" @onclick="() => SelectExercise(11)" style="cursor: pointer;">
                    <span class="icon">ğŸ“</span> 11. Dapper CUD
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="markdown-content">
            @switch (CurrentExercise)
            {
                case 1: <Exercise01 /> break;
                case 2: <Exercise02 /> break;
                case 3: <Exercise03 /> break;
                case 4: <Exercise04 /> break;
                case 5: <Exercise05 /> break;
                case 6: <Exercise06 /> break;
                case 7: <Exercise07 /> break;
                case 8: <Exercise08 /> break;
                case 9: <Exercise09 /> break;
                case 10: <Exercise10 /> break;
                case 11: <Exercise11 /> break;
                default: <p>Selecteer een oefening.</p> break;
            }
        </div>
    </div>
</div>

@code {
    private int CurrentExercise = 1;

    private void SelectExercise(int exercise)
    {
        CurrentExercise = exercise;
    }
}
